<apex:page tabStyle="Monitor__tab" sidebar="false" controller="MonitorController" action="{!doInit}">
    
    <apex:sectionHeader title="Message Queue Monitoring" help="{!URLFOR($Page.MonitorHelp)}" />
    
    <apex:chart data="{!Statistics}" width="100%" height="600">
        <apex:legend position="right" />
        <apex:axis type="Category" position="bottom" title="Process" fields="Name">
            <apex:chartLabel rotate="270" />
        </apex:axis>
        <apex:axis type="Numeric" position="left" title="Messages" fields="Queued,Buffer,Processing,Reprocess,Overdue">
            <!--<apex:chartLabel />-->
        </apex:axis>
        <apex:barSeries colorSet="#C00" orientation="vertical" axis="left" xField="Name" yField="Overdue" />
        <apex:areaSeries colorSet="#999,#3C3,#CC3,#33C"
            opacity="0.6"
            axis="left"
            xField="Name"
            yField="Queued,Buffer,Processing,Reprocess"
            title="Queued,Buffer,Processing,Reprocess"
        />
    </apex:chart>
    
</apex:page>