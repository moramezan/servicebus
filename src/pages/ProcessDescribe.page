<apex:page showHeader="false" controller="ProcessDescribeController" title="Process: {!Process.Name}">
    <apex:pageMessages showDetail="false" />

    <apex:pageBlock mode="maindetail">
        <apex:pageBlockSection collapsible="false" columns="1" title="ESB Process">
            <apex:pageBlockSectionItem >
                <apex:dataTable cellspacing="10" value="{!process}" var="process">
                    <apex:column breakBefore="true" style="font-weight: bold;">Tag</apex:column>
                    <apex:column value="{!Process.Tag}" />

                    <apex:column breakBefore="true" style="font-weight: bold;">Name</apex:column>
                    <apex:column value="{!Process.Name}" />
                    
                    <apex:column breakBefore="true" style="font-weight: bold;">Description</apex:column>
                    <apex:column value="{!Process.Description}" />
                    
                    <apex:column breakBefore="true" style="font-weight: bold;">Icon</apex:column>
                    <apex:column ><apex:image value="{!URLFOR($Resource.SequenceBuilderZip, '/resources/famfamfam/' + Process.Icon + '.png')}" /> {!Process.Icon}</apex:column>
                </apex:dataTable>
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection collapsible="false" columns="1" title="Input Event Parameters" rendered="{!Process.Inputs != null}">
            <apex:pageBlockSectionItem >
                <apex:dataTable cellspacing="10" value="{!Process.Inputs}" var="key">
                    <apex:column style="font-weight: bold;">{!key}</apex:column>
                    <apex:column >{!Process.Inputs[key]}</apex:column>
                </apex:dataTable>
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection collapsible="false" columns="1" title="Output Event Parameters" rendered="{!Process.Outputs != null}">
            <apex:pageBlockSectionItem >
                <apex:dataTable cellspacing="10" value="{!Process.Outputs}" var="key">
                    <apex:column style="font-weight: bold;">{!key}</apex:column>
                    <apex:column >{!Process.Outputs[key]}</apex:column>
                </apex:dataTable>
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
    </apex:pageBlock>
    
</apex:page>