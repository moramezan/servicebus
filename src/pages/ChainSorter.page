        $ObjectType.Process__c.Fields.Icon__c.Name = '{!$ObjectType.Process__c.Fields.Icon__c.Name}';

        ProtocolAndHost = '{!ProtocolAndHost}';
        Processes = {!Processes};
        Steps = {!Steps};
