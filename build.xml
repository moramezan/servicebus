    <taskdef uri="antlib:com.salesforce" classpath="lib/salesforce_ant_34.0/ant-salesforce.jar" />
    <taskdef name="http" uri="org.missinglink.ant.task.http.HttpClientTask" classname="org.missinglink.ant.task.http.HttpClientTask" classpath="lib/ml-ant-http-1.1.3/ml-ant-http-1.1.3.jar"/><!-- Download from https://code.google.com/p/missing-link/ -->

    <property file="build.properties"/>
    <property environment="env"/>
    
    <target name="pull" description="Pulls (with rebase) the latest remote repository changes.">
        <exec executable="git">
            <arg value="pull" />
            <arg value="--rebase" />
        </exec>
    </target>

    <target name="push" description="Pushes (to master) the latest remote repository changes.">
        <!-- #1010 get rid of bootstrap component -->
        <fileset id="success.file" dir="src" includes="">
            <contains text="localhost" />
        </fileset>
        <fail message="LOCALHOST string found... are you sure you want to do that?">
            <condition>
                <resourcecount when="greater" count="0" refid="success.file" />
            </condition>
        </fail>
        <exec executable="git">
            <arg value="push" />
            <arg value="origin" />
            <arg value="master" />
        </exec>
    </target>
    
    <target name="retrieve-busconnectedapp" description="Retrieves the SERVICEBUS connected app definitions from their separate packaging org.">
        <sf:retrieve
            username="${busconnectedapp.username}"
            password="${busconnectedapp.password}"
            serverurl="${busconnectedapp.serverurl}"
            retrieveTarget="busconnectedapp"
            unpackaged="busconnectedapp/package.xml"
        />
    </target>
    
    <target name="retrieve-abstract" description="Retrieves the Abstract.Process from its separate packaging org.">
        <sf:retrieve
            username="${abstract.username}"
            password="${abstract.password}"
            serverurl="${abstract.serverurl}"
            retrieveTarget="abstract"
            unpackaged="abstract/package.xml"
        />
    </target>
    
    <target name="normalize-whitespace">
        <!-- finds tabs occupying 1 space -->
        <replaceregexp flags="mg">
            <fileset dir="src/classes" />
            <regexp pattern="^((    )+)   \t" />
            <substitution expression="\1    "/>
        </replaceregexp>

        <!-- finds tabs occupying 2 spaces -->
        <replaceregexp flags="mg">
            <fileset dir="src/classes" />
            <regexp pattern="^((    )+)  \t" />
            <substitution expression="\1    "/>
        </replaceregexp>

        <!-- finds tabs occupying 3 spaces -->
        <replaceregexp flags="mg">
            <fileset dir="src/classes" />
            <regexp pattern="^((    )+) \t" />
            <substitution expression="\1    "/>
        </replaceregexp>

        <!-- finds tabs occupying 4 spaces -->
        <replaceregexp flags="mg">
            <fileset dir="src/classes" />
            <regexp pattern="\t" />
            <substitution expression="    "/>
        </replaceregexp>
        
        <!-- finds trailing whitespace after code -->
        <replaceregexp flags="mg">
            <fileset dir="src/classes" />
            <regexp pattern="([^\s])[ \t]+$" />
            <substitution expression="\1"/>
        </replaceregexp>
    </target>
    
    <target name="retrieve" description="Retrieves all package components to dev org">
        <sf:retrieve
            username="${de.username}"
            password="${de.password}"
            serverurl="${de.serverurl}"
            retrieveTarget="src"
            packageNames="Service Bus"
        />
        <antcall target="alphabetize-searchlayouts" />
        <antcall target="optimize-for-release" />
        <antcall target="normalize-whitespace" />
    </target>

    <target name="deploy" description="Deploys all package components to dev org">
        <antcall target="optimize-for-devorg" />
        <subant failonerror="false" target="subdeploy" buildpath="." />
        <executeAnonymous username="${de.username}" password="${de.password}" serverurl="${de.serverurl}">
            new PostInstallHandler().onInstall(null);
            RouterImplementation.optimize();
            ConfigureController.settings(UserInfo.getUserId());
            ConfigureController.permissions(UserInfo.getUserId());
            ConfigureController.defaults(UserInfo.getSessionId());
            ConfigureController.reinstallSchedule();
        </executeAnonymous>
        <!-- #684 always try to restart jobs, so a failed deployment doesn't leave the org with the schedule stopped -->
        <antcall target="optimize-for-release" />
    </target>
    
    <target name="subdeploy" description="Subtarget for avoiding fail-on-error">
        <!-- stop jobs, deploy (a failure by either of these returns out of subant) -->
        <executeAnonymous username="${de.username}" password="${de.password}" serverurl="${de.serverurl}">for (SObject j : [SELECT Id FROM CronTrigger]) System.abortJob(j.Id);</executeAnonymous>
        <sf:deploy username="${de.username}" password="${de.password}" serverurl="${de.serverurl}" deployRoot="src" />
    </target>

    <target name="package" description="Deploys all components to packaging org">
        <!-- prompt user to confirm this is the right time to tag -->
        <echo message="#############################################" />
        <input message="ARE YOU SURE TO DEPLOY TO THE PACKAGING ORG?" addproperty="tag.confirm" validargs="ok" />
        
        <antcall target="optimize-for-release" />
        <executeAnonymous username="${servicebus.username}" password="${servicebus.password}" serverurl="${servicebus.serverurl}">for (SObject j : [SELECT Id FROM CronTrigger]) System.abortJob(j.Id);</executeAnonymous>
        <sf:deploy
            username="${servicebus.username}"
            password="${servicebus.password}"
            serverurl="${servicebus.serverurl}"
            deployRoot="src"
        />
        <executeAnonymous username="${servicebus.username}" password="${servicebus.password}" serverurl="${servicebus.serverurl}">
            new PostInstallHandler().onInstall(null);
            RouterImplementation.optimize();
            ConfigureController.settings(UserInfo.getUserId());
            ConfigureController.permissions(UserInfo.getUserId());
            ConfigureController.defaults(UserInfo.getSessionId());
            ConfigureController.reinstallSchedule();
        </executeAnonymous>
        
        <echo message="#############################################" />
        <input message="MAKE SURE TO CHOOSE 'PostInstallInstructions' WHEN UPLOADING PACKAGE" addproperty="tag.postinstall" validargs="gotit" />
    </target>
    
